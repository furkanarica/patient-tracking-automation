@model IEnumerable<HastaTakipOtomasyonu_Model.Models.Hasta>
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}
<br />
<br />

<div class="row">
    <div class="col-9">
        <h4 class="text-info">Hasta Listesi</h4>
    </div>

    @*<div class="col-3 text-right">
        <a asp-action="Update_Insert" class="btn btn-primary form-control">Kullanıcı Ekle</a>
    </div>*@
</div>

<br />

<div>
    @if (Model.Count() > 0)
    {
        <table id="tblMuayene" class="table table-sm table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">TC No</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Detay</th>
                    <th>Muayene Et</th>
                    <th>Muayeneyi Tamamla</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.HastaTc</th>
                    <td>@item.HastaAdı</td>
                    <td>@item.HastaSoyadı</td>
                    <td>
                        <a class="btn btn-success text-white" asp-action="PatientDetail" asp-route-Id="@item.HastaId">Hasta Detayı</a>
                    </td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="PatientExamination" asp-route-Id="@item.HastaId">Muayene Et</a>
                    </td>
                    <td>
                        <a class="btn btn-danger text-white" asp-action="RemovePatientInfo" asp-route-Id="@item.HastaId">Muayeneyi Tamamla</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>Listelenecek herhangi bir hasta bulunamadı...</p>
    }
</div>


