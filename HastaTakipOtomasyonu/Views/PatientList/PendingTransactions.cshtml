@model IEnumerable<HastaTakipOtomasyonu_Model.Models.BekleyenIslem>
@{
    ViewData["Title"] = "Bekleyen İşlemler";
    Layout = "~/Views/Shared/_PersonelLayout.cshtml";
}
<br />
<br />

<div class="row">
    <div class="col-9">
        <h4 class="text-info">Bekleyen İşlemler</h4>
    </div>
</div>

<br />


<div>
    @if (Model.Count() > 0)
    {
        <table id="tblBekleyenIslem" class="table table-sm table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">TC No</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Doktoru</th>
                    <th>Hasta Durumu</th>
                    <th>İşlem Detayı</th>
                    <th>İşlemi Tamamla</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.HastaTc</th>
                    <td>@item.HastaAdı</td>
                    <td>@item.HastaSoyadı</td>
                    <td>@item.Doktor.DoktorAdSoyad</td>
                    <td>@item.Muayene.Durum</td>
                    <td>
                        <a class="btn btn-success text-white" asp-action="TransactionDetail" asp-route-Id="@item.BekleyenIslemId">İşlem Detayı</a>
                    </td>
                    <td>
                        <a class="btn btn-danger text-white" asp-action="CompleteTransaction" asp-route-Id="@item.BekleyenIslemId">İşlemi Tamamla</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>Listelenecek herhangi bir bekleyen işlem bulunamadı...</p>
    }
</div>

