@model IEnumerable<HastaTakipOtomasyonu_Model.Models.Hasta>

@{
    ViewData["Title"] = "Hasta Kabul";
    Layout = "~/Views/Shared/_PersonelLayout.cshtml";
}
<br />
<br />

<div class="row">
    <div class="col-9">
        <h4 class="text-info">Hasta Listesi</h4>
    </div>

    <div class="col-3 text-right">
        <a asp-action="Update_Insert" class="btn btn-primary form-control">Hasta Ekle</a>
    </div>
</div>

<br />

<div>
    @if (Model.Count() > 0)
    {
        <table id="tblHasta" class="table table-sm table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">TC No</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Doktoru</th>
                    <th>Klinik</th>
                    <th>Sil</th>
                    <th>Düzenle</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.HastaTc</th>
                    <td>@item.HastaAdı</td>
                    <td>@item.HastaSoyadı</td>
                    <td>@item.Doktor.DoktorAdSoyad</td>
                    <td>@item.Doktor.Klinik.KlinikAdi</td>
                    <td>
                        <a class="btn btn-danger text-white" asp-action="Sil" asp-route-Id="@item.HastaId">Sil</a>
                    </td>
                    <td>
                        <a class="btn btn-success text-white" asp-action="Update_Insert" asp-route-Id="@item.HastaId">Düzenle</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>Listelenecek herhangi bir hasta bulunamadı...</p>
    }
</div>
