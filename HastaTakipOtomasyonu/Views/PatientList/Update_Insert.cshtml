@model HastaTakipOtomasyonu_Model.Models.ViewModels.HastaVM
@{
    ViewData["Title"] = "Hasta Ekle";
    Layout = "~/Views/Shared/_PersonelLayout.cshtml";
}

<div class="container">
    <div class="py-5 text-center" >
        <img class="d-block mx-auto mb-4" src="/images/patient-logo.svg" alt="" width="72" height="72">
        <h2>Hasta İşlemleri</h2>
        <p class="lead">Lütfen aşağıdaki tüm bilgileri eksiksiz bir şekilde doldurunuz.</p>
    </div>
    <div class="row">
        <div class="col-md-8 order-md-1">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Hasta.HastaId" />
                @if (Model.Hasta != null)
                {
                    ViewData["Title"] = "Hasta Düzenle";
                }

                <h4 class="mb-3">@ViewData["Title"]</h4>

                <div class="mb-3">
                    <label asp-for="Hasta.HastaTc">Kimlik Numarası</label>
                    <input asp-for="Hasta.HastaTc" class="form-control" placeholder="Kimlik Numarası" maxlength="11">
                    <span asp-validation-for="Hasta.HastaTc" class="text-danger"></span>
                </div>

                <hr class="mb-4">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Hasta.HastaAdı">Ad</label>
                        <input asp-for="Hasta.HastaAdı" class="form-control" placeholder="Ad">
                        <span asp-validation-for="Hasta.HastaAdı" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Hasta.HastaSoyadı">Soyad</label>
                        <input asp-for="Hasta.HastaSoyadı" class="form-control" placeholder="Soyad">
                        <span asp-validation-for="Hasta.HastaSoyadı" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Hasta.HastaDogumTarihi">Doğum Tarihi</label>
                        <input type="date" asp-for="Hasta.HastaDogumTarihi" class="form-control" placeholder="mm/dd/yyyy">
                        <span asp-validation-for="Hasta.HastaDogumTarihi" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Hasta.HastaDogumYeri">Doğum Yeri</label>
                        <input asp-for="Hasta.HastaDogumYeri" class="form-control" placeholder="Doğum Yeri">
                        <span asp-validation-for="Hasta.HastaDogumYeri" class="text-danger"></span>
                    </div>
                </div>

                <hr class="mb-4">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Hasta.KanGrubu">Kan Grubu</label>
                        <select asp-for="Hasta.KanGrubu" class="form-control">
                            <option value="">Kan Grubu</option>
                            <option>AB Rh+</option>
                            <option>AB Rh-</option>
                            <option>A Rh+</option>
                            <option>A Rh-</option>
                            <option>B Rh+</option>
                            <option>B Rh-</option>
                            <option>O Rh+</option>
                            <option>O Rh-</option>
                        </select>
                        <span asp-validation-for="Hasta.KanGrubu" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Hasta.HastaCinsiyet">Cinsiyet</label>
                        <select asp-for="Hasta.HastaCinsiyet" class="form-control">
                            <option value="">Cinsiyet</option>
                            <option>Kadın</option>
                            <option>Erkek</option>
                        </select>
                        <span asp-validation-for="Hasta.HastaCinsiyet" class="text-danger"></span>
                    </div>
                </div>

                <hr class="mb-4">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Hasta.HastaAdres">Adres</label>
                        <input asp-for="Hasta.HastaAdres" class="form-control" placeholder="Adres">
                        <span asp-validation-for="Hasta.HastaAdres" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Hasta.HastaTelefon">Telefon</label>
                        <input asp-for="Hasta.HastaTelefon" class="form-control" placeholder="Telefon" maxlength="11">
                        <span asp-validation-for="Hasta.HastaTelefon" class="text-danger"></span>
                    </div>
                </div>

                <hr class="mb-4">

                <div class="mb-3">
                    <label asp-for="Hasta.HastaGirisTarihi">Giriş Tarihi</label>
                    <input type="date" asp-for="Hasta.HastaGirisTarihi" class="form-control" placeholder="Giriş Tarihi">
                    <span asp-validation-for="Hasta.HastaGirisTarihi" class="text-danger"></span>
                </div>

                <hr class="mb-4">

                <div class="mb-3">
                    <label asp-for="Hasta.KlinikId">Klinik</label>
                    @Html.DropDownListFor(a=>a.Hasta.KlinikId, Model.KlinikListesi, "Klinik", new { @class ="form-control"})
                    <span asp-validation-for="Hasta.KlinikId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Hasta.DoktorId">Doktor</label>
                    @Html.DropDownListFor(a=>a.Hasta.DoktorId, Model.DoktorListesi, "Doktor", new { @class ="form-control"})
                    <span asp-validation-for="Hasta.DoktorId" class="text-danger"></span>                                     
                </div>

                <hr class="mb-4">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @if (Model.Hasta == null)
                        {
                            <button type="submit" class="btn btn-primary form-control">Kaydet</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-secondary form-control">Güncelle</button>
                        }
                    </div>
                    <div class="col-md-6 mb-3">
                        <a asp-action="Index" class="btn btn-success form-control">Listeye Geri Dön</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
   <partial name="_ValidationScriptsPartial" />       
}



