@model IEnumerable<HastaTakipOtomasyonu_Model.Models.Klinik>
@{
    ViewData["Title"] = "Klinikler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<div class="row">
    <div class="col-9">
        <h4 class="text-info">Klinik Listesi</h4>
    </div>

    <div class="col-3 text-right">
        <a asp-action="Update_Insert" class="btn btn-primary form-control">Klinik Ekle</a>
    </div>
</div>

<br />

<div>
    @if(Model.Count() > 0)
    {
        <table id="tblKlinik" class="table table-sm table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th>Klinik Adı</th>
                    <th>Sil</th>
                    <th>Düzenle</th>
                </tr> 
            </thead>

            @foreach(var item in Model)
            {
                <tr>
                 <th scope="row">@item.KlinikKodu</th>
                 <td>@item.KlinikAdi</td>
                    <td>
                        <a class="btn btn-danger text-white" asp-action="Sil" asp-route-Id="@item.KlinikId">Sil</a>
                    </td>
                    <td>
                        <a class="btn btn-success text-white" asp-action="Update_Insert" asp-route-Id="@item.KlinikId">Düzenle</a>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p>Listelenecek herhangi bir klinik bulunamadı...</p>
    }
</div>