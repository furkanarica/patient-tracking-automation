@model IEnumerable<HastaTakipOtomasyonu_Model.Models.Doktor>
@{
    ViewData["Title"] = "Doktorlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />


<div class="row">
    <div class="col-9">
        <h4 class="text-info">Doktor Listesi</h4>
    </div>

    <div class="col-3 text-right">
        <a asp-action="Update_Insert" class="btn btn-primary form-control">Doktor Ekle</a>
    </div>
</div>

<br />


<div>
    @if (Model.Count() > 0)
    {
        <table id="tblDoktor" class="table table-sm table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">TC No</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Klinik</th>
                    <th>Sil</th>
                    <th>Düzenle</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.DoktorTc</th>
                    <td>@item.DoktorAd</td>
                    <td>@item.DoktorSoyad</td>
                    <td>@item.Klinik.KlinikAdi</td>
                    <td>
                        <a class="btn btn-danger text-white" asp-action="Sil" asp-route-Id="@item.DoktorId">Sil</a>
                    </td>
                    <td>
                        <a class="btn btn-success text-white" asp-action="Update_Insert" asp-route-Id="@item.DoktorId">Düzenle</a>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p>Listelenecek herhangi bir doktor bulunamadı...</p>
    }
</div>




