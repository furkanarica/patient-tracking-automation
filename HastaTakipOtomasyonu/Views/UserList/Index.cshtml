@model IEnumerable<HastaTakipOtomasyonu_Model.Models.Kullanici>
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />


<div class="row">
    <div class="col-9">
        <h4 class="text-info">Kullanıcı Listesi</h4>
    </div>

    <div class="col-3 text-right">
        <a asp-action="Update_Insert" class="btn btn-primary form-control">Kullanıcı Ekle</a>
    </div>
</div>

<br />

<div>
    @if (Model.Count() > 0)
    {
        <table id="tblKullanici" class="table table-sm table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">TC No</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Telefon</th>
                    <th>Kullanıcı Adı</th>
                    <th>Yetki Türü</th>
                    <th>Sil</th>
                    <th>Düzenle</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.TcNo</th>
                    <td>@item.Ad</td>
                    <td>@item.Soyad</td>
                    <td>@item.Telefon</td>
                    <td>@item.KullaniciAdi</td>
                    <td>@item.Yetki.YetkiAdi</td>
                    <td>
                        <a class="btn btn-danger text-white" asp-action="Sil" asp-route-Id="@item.KullaniciId">Sil</a>
                    </td>
                    <td>
                        <a class="btn btn-success text-white" asp-action="Update_Insert" asp-route-Id="@item.KullaniciId">Düzenle</a>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p>Listelenecek herhangi bir kullanıcı bulunamadı...</p>
    }
</div>


